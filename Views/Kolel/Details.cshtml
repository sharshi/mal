@model Shafeh.Models.Kolel

<h1>@Model.Name</h1>

@if (User.IsInRole("Admin"))
{
    <a href="@Url.Action("Edit", "Kolel", new { id = Model.Id })" class="btn btn-primary">Edit</a>
    <a href="@Url.Action("Delete", "Kolel", new { id = Model.Id })" class="btn btn-danger">Delete</a>

    <h2>Join Requests</h2>
    <table class="table">
    <thead>
        <tr>
            <th>Member ID</th>
            <th>Request Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model.JoinRequests.Where(r => r.KolelId == Model.Id))
            {
                <tr>
                    <td>@request.MemberId</td>
                    <td>@request.RequestDate</td>
                    <td>@request.Status</td>
                    <td>
                        @if (request.Status == "Pending")
                        {
                            <form asp-action="ApproveJoinRequest" asp-route-kolelId="@Model.Id" asp-route-requestId="@request.Id"
                                method="post">
                                <button type="submit" class="btn btn-success">Approve</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else if (User.IsInRole("Member"))
{
    @if (ViewBag.RequestSent == true)
    {
        <button class="btn btn-success" disabled>Request Sent!</button>
    }
    else
    {
        <form asp-action="Join" asp-controller="Kolel" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-success">Request to Join</button>
</form>
    }
}
<a href="@Url.Action("Index", "Kolel")">Back to List</a>